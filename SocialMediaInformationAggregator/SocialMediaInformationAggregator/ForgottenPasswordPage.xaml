        <TextBox x:Name="textBoxSec" HorizontalAlignment="Left" Height="23" Margin="446,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxFrst" HorizontalAlignment="Left" Height="23" Margin="446,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxThird" HorizontalAlignment="Left" Height="23" Margin="446,257,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label1" Content="Название Вашего любимого сериала" HorizontalAlignment="Left" Margin="168,165,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Имя Вашего домашнего питомца" HorizontalAlignment="Left" Margin="168,209,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label3" Content="Ваше хобби" HorizontalAlignment="Left" Margin="168,253,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
