<Page x:Class="SocialMediaInformationAggregator.ChangePasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SocialMediaInformationAggregator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePasswordPage">

    <Grid>
        <Label Content="Смена пароля" HorizontalAlignment="Left" Margin="380,20,0,0" VerticalAlignment="Top" Height="35" Width="129" FontSize="18"/>
        <PasswordBox x:Name="passNew" HorizontalAlignment="Left" Margin="380,94,0,0" VerticalAlignment="Top" Height="22" Width="125" RenderTransformOrigin="0.754,0.777"/>
        <PasswordBox x:Name="repeatPass" HorizontalAlignment="Left" Margin="380,149,0,0" VerticalAlignment="Top" Height="22" Width="125" RenderTransformOrigin="0.754,0.777"/>
        <Label Content="Введите новый пароль" HorizontalAlignment="Left" Margin="174,94,0,0" VerticalAlignment="Top"/>
        <Label Content="Введите новый пароль еще раз" HorizontalAlignment="Left" Margin="174,149,0,0" VerticalAlignment="Top"/>
        <Button Content="Подтвердить" HorizontalAlignment="Left" Margin="406,226,0,0" VerticalAlignment="Top" Width="99" Click="Button_Click"/>

    </Grid>
</Page>
