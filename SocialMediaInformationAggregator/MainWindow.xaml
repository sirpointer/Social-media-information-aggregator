        mc:Ignorable="d"
              Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="button" Content="Регистрация" HorizontalAlignment="Left" Margin="159,247,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.716,0.406" Click="button_Click"/>
        <TextBox x:Name="TextBoxName" HorizontalAlignment="Left" Height="23" Margin="159,59,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="120"/>
