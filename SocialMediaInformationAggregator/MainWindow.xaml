        <TextBox x:Name="TextBoxLogin" HorizontalAlignment="Left" Height="23" Margin="159,138,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBoxPassword" HorizontalAlignment="Left" Height="23" Margin="159,179,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBoxRepeat" HorizontalAlignment="Left" Height="23" Margin="299,179,0,0" TextWrapping="Wrap" Text="Повторите пароль" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBoxmail" HorizontalAlignment="Left" Height="23" Margin="159,207,0,0" TextWrapping="Wrap" Text="e-mail" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Регистрация" HorizontalAlignment="Left" Margin="159,22,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
